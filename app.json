{
  "id": "com.sharedfunctions.homey-expresscontrols",
  "name": {
    "en": "Express Controls"
  },
  "version": "0.0.7",
  "compatibility": ">=1.0.0",
  "category": [
    "appliances",
    "lights",
    "security",
    "climate"
  ],
  "description": {
    "en": "Express Controls Zwave devices for Homey",
    "nl": "Express Controls Zwave apparaten voor Homey"
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },

  "author": {
    "name": "Konrad Walsh",
    "email": "konradwalsh@gmail.com"
  },
  "capabilities": {
    "measure_luminance_percentage": {
      "type": "number",
      "title": {
        "en": "LUX %",
        "nl": "LUX %"
      },
      "desc": {
        "en": "lux in percentage",
        "nl": "luminance in procent"
      },
      "units": {
        "en": "%",
        "nl": "%"
      },
      "getable": true,
      "setable": false
    }
  },
  "drivers": [
    {
      "id": "EZ31",
      "name": {
        "en": "EZ-Motion+ Multi Sensor 3-in-1"
      },
      "zwave": {
        "manufacturerId": 30,
        "productTypeId": 2,
        "productId": 2,
        "wakeUpInterval": 360,
        "learnmode": {
          "image": "/drivers/EZ31/assets/learnmode.svg",
          "instruction": {
            "en": "Press the Blue Z-Wave button on the side of your Multi Sensor",
            "nl": "Druk op de Bleu Z-Wave knop op de Multi Sensor"
          }
        },
        "associationGroups": [
          1
        ],
        "defaultConfiguration": [
          {
            "id": 101,
            "size": 4,
            "value": 225
          }
        ]
      },
      "class": "sensor",
      "capabilities": [
        "measure_battery",
        "alarm_motion",
        "measure_temperature",
        "measure_luminance"
      ],
	        "mobile": {
        "components": [

          {
            "id": "sensor",
            "capabilities": [
              "measure_battery",
              "alarm_motion",
              "measure_luminance_percentage",
              "measure_temperature"
            ],
            "options": {
              "icons": {
                "measure_luminance_percentage": "./drivers/EZ31/assets/measure_luminance.svg"

              }
            }
          }

        ]
      },

      "images": {
        "large": "/drivers/EZ31/assets/images/large.jpg",
        "small": "/drivers/EZ31/assets/images/small.jpg"
      },
      "settings": [
        {
          "id": 1,
          "type": "number",
          "label": {
            "en": "1. Motion Sensitivity"
          },
          "value": 200,
          "attr": {
            "min": 0,
            "max": 255
          },
          "hint": {
            "en": "between 0 and 255  unsigned integer "
          }
        },
        {
          "id": 2,
          "type": "number",
          "label": {
            "en": "2. On time in minutes"
          },
          "value": 5,
          "attr": {
            "min": 0,
            "max": 255
          },
          "hint": {
            "en": "2. On time in minutes between 0 - 255 unsigned integer "
          }
        },
        {
          "id": 3,
          "type": "number",
          "label": {
            "en": "3. LED Control"
          },
          "value": -1,
          "attr": {
            "min": -1,
            "max": 1
          },
          "values": [
            {
              "id": "-1",
              "label": {
                "en": "Led on"
              }
            },
            {
              "id": "0",
              "label": {
                "en": "Led off"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "Led on"
              }
            }
          ],
          "hint": {
            "en": "Device Led On or Off -1 and 1 are on 0 is off"
          }
        },
        {
          "id": 4,
          "type": "number",
          "label": {
            "en": "4. Light Treshold"
          },
          "value": 80,
          "attr": {
            "min": 0,
            "max": 100
          },
          "hint": {
            "en": "light treshold between 0 and 100 %  % of light if it is under send light on command"
          }
        },
        {
          "id": 5,
          "type": "number",
          "label": {
            "en": "5. Stay Awake"
          },
          "value": 1,
          "attr": {
            "min": -1,
            "max": 1
          },
          "values": [
            {
              "id": "-1",
              "label": {
                "en": "Stay awake"
              }
            },
            {
              "id": "0",
              "label": {
                "en": "Not Stay awake"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "Stay awake"
              }
            }
          ],
          "hint": {
            "en": "Stay awake 0 => No   1, -1 => Yes"
          }
        },
        {
          "id": 6,
          "type": "number",
          "label": {
            "en": "6. value send"
          },
          "value": 1,
          "attr": {
            "min": -1,
            "max": 1
          },
          "values": [
            {
              "id": "-1",
              "label": {
                "en": "-1"
              }
            },
            {
              "id": "0",
              "label": {
                "en": "0"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "1"
              }
            }
          ],
          "hint": {
            "en": "Value to send with basic send command 1,0,-1"
          }
        },
        {
          "id": 7,
          "type": "number",
          "label": {
            "en": "7. Temperature Offset"
          },
          "value": -127,
          "attr": {
            "min": -127,
            "max": 128
          },
          "hint": {
            "en": "adjustment temp factory set"
          }
        },
        {
          "id": 8,
          "type": "number",
          "label": {
            "en": "8. bitmask reports to be sent on wake up"
          },
          "value": 7,
          "attr": {
            "min": 0,
            "max": 7
          },
          "values": [
            {
              "id": "0",
              "label": {
                "en": "0"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "1"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "2"
              }
            },
            {
              "id": "3",
              "label": {
                "en": "3"
              }
            },
            {
              "id": "4",
              "label": {
                "en": "4"
              }
            },
            {
              "id": "5",
              "label": {
                "en": "5"
              }
            },
            {
              "id": "6",
              "label": {
                "en": "6"
              }
            },
            {
              "id": "7",
              "label": {
                "en": "7"
              }
            }
          ],
          "hint": {
            "en": "bitmask reports send     0 = temperature 1 = luminance  3 = battery"
          }
        },
        {
          "id": "poll_interval",
          "type": "number",
          "attr": {
            "min": 30,
            "max": 3600
          },
          "value": 60,
          "label": {
            "en": "Poll Interval",
            "nl": "Poll Interval"
          },
          "hint": {
            "en": "The amount of seconds between asking the device for a status update, default: 300 [s].",
            "nl": "Aantal seconden tussen het opvragen van een status update aan het apparaat, standaard: 300 [s]."
          }
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "EZ31_lower",
        "title": {
          "en": "Temperature Dropped ",
          "nl": "Temperatuur gaat onder "
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_uri=homey:app:com.sharedfunctions.homey-expresscontrols&driver_id=EZ31"
          },
          {
            "name": "temperature2",
            "placeholer": {
              "en": "In degrees celcius",
              "nl": "In graden celcius"
            },
            "type": "number"
          }
        ]
      }
    ]
  }
}